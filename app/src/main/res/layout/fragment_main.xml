<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.Main"
    android:background="@color/mixblack">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/mixblack">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes App"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/amidone_grotesk"
                android:layout_gravity="center"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lavBtnDelete_main"
                    android:layout_width="60dp"
                    android:layout_gravity="end"
                    android:layout_height="match_parent"
                    app:lottie_fileName="btndelete.json"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_main"
        android:layout_marginTop="70dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:lottie_fileName="listLoading.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavBtnAddClick"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:lottie_fileName="bAddClick"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:lottie_loop="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavBtnAddLoop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:lottie_fileName="bAddLoop.json"
        app:lottie_autoPlay="true"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:lottie_loop="true"/>
</FrameLayout>